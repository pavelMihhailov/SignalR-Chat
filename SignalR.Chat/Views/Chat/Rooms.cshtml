@model List<ChatRoom>
@{
    ViewData["Title"] = "Chat Rooms";
}

<div class="row">
    @if (Model != null)
    {
        foreach (var room in Model)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@room.Name</h5>
                        <a class="btn btn-primary" asp-action="Room" asp-controller="Chat" asp-route-id="@room.Id">Enter chat room</a>
                    </div>
                </div>
            </div>
        }
    }
</div>